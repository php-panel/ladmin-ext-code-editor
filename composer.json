{
    "name": "php-panel/ladmin-ext-code-editor",
    "description": "Code editor extension for laravel-admin based on code-mirror",
    "type": "library",
    "keywords": [
        "laravel-admin",
        "extension",
        "code mirror",
        "code",
        "editor"
    ],
    "homepage": "https://github.com/php-panel/ladmin-ext-code-editor",
    "license": "MIT",
    "authors": [
        {
            "name": "leeqvip",
            "email": "leeqvip@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "laravel/framework": ">=12.0",
        "php-panel/laravel-admin": ">=3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~11.0"
    },
    "autoload": {
        "psr-4": {
            "Ladmin\\CodeEditor\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ladmin\\CodeEditor\\CodeEditorServiceProvider"
            ]
        }
    }
}